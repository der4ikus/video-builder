# =============================================================================
# FAST VIDEO BUILDER GPU SERVER - КОНФИГУРАЦИЯ
# =============================================================================

# Redis настройки
REDIS_URL=redis://redis:6379

# MinIO настройки (файловое хранилище)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_URL=minio:9000

# API сервер настройки
API_HOST=0.0.0.0
API_PORT=8000
MAX_FILE_SIZE=500MB
CLEANUP_INTERVAL=3600

# Worker настройки
WORKER_REPLICAS=4
WORKER_CONCURRENCY=1
GPU_MEMORY_LIMIT=6144

# Видео настройки по умолчанию
DEFAULT_TARGET_FPS=16
DEFAULT_RESOLUTION=1920:1080
MAX_DURATION_MINUTES=30

# TTS настройки
DEFAULT_VOICE=am_santa
DEFAULT_SPEED=0.75

# Фоновая музыка
DEFAULT_BG_VOLUME=0.3

# =============================================================================
# НАСТРОЙКИ ДЛЯ РАЗНЫХ КОНФИГУРАЦИЙ GPU
# =============================================================================

# Для RTX 3090 (24GB VRAM) - рекомендуемые настройки:
# WORKER_REPLICAS=4
# GPU_MEMORY_LIMIT=6144

# Для RTX 4090 (24GB VRAM) - можно больше воркеров:
# WORKER_REPLICAS=6
# GPU_MEMORY_LIMIT=4096

# Для экономии (меньше воркеров, но стабильнее):
# WORKER_REPLICAS=2
# GPU_MEMORY_LIMIT=8192

# =============================================================================
# МОНИТОРИНГ И ОТЛАДКА
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Включить подробные логи GPU
NVIDIA_VISIBLE_DEVICES=all
CUDA_VISIBLE_DEVICES=0
